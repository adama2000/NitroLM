<?xml version="1.0" encoding="utf-8"?>
<extension xmlns="http://ns.adobe.com/air/extension/2.5">
	<id>com.nitrolm.NitroLM</id>
	<versionNumber>1.0.0</versionNumber>

	<name>NitroLM Licensing Extension</name>
	<description>
		<text xml:lang="en_US">Native Extension for NitroLM licensing library for AIR</text>
	</description>
	<copyright>Copyright 2011, Simplified Logic, Inc.</copyright>

	<platforms>
	
		<platform name="Windows-x86">
			<applicationDeployment>
				<nativeLibrary>NitroLM.dll</nativeLibrary>
				<initializer>ExtInitializer</initializer>
				<finalizer>ExtFinalizer</finalizer>
			</applicationDeployment>
		</platform>
 
		<platform name="MacOS-x86">
			<applicationDeployment>
				<nativeLibrary>NitroLM.framework</nativeLibrary>
				<initializer>ExtInitializer</initializer>
				<finalizer>ExtFinalizer</finalizer>
			</applicationDeployment>
		</platform>

	</platforms>
</extension>